<!-- office/_layouts\modal\modelForm -->
<%
const id = model.getId();
const p = {
    url: _controller.getOriginalUrl(),
    key: model.class.getKey(),
    id: model.isNew() ? '' : id,
    className: model.class.name,
    viewName: model.view.name,
    timestamp: _controller.timestamp,
    hideEmptyGroups: true,
    readOnly: model.readOnly,
    transiting: model.isTransiting(),
    hasHistory: model.hasHistory(),
    delete: `office/model/delete?c=${model.class.id}`
};
if (typeof params !== 'undefined') {
    Object.assign(p, params);
}
%>
<div class="jmodal-scroll-container box-info box <%- model.view.options.css %>"
     data-tab="<%= blocks.tab %>"
     data-title="<%= blocks.title %>"
     data-t-tab="<%- blocks.tabTranslation %>"
     data-t-title="<%- blocks.titleTranslation %>">

    <div class="box-header with-border scroll-header">
        <div class="model-commands">
            <div class="btn-set">
                <button data-command="saveClose" class="btn btn-primary" type="button" title="Save and close">
                    <span class="glyphicon glyphicon-off"></span>
                </button>
                <button data-command="save" class="btn btn-info" type="button" title="Save">
                    <span class="glyphicon glyphicon-save"></span>
                </button>
            </div>
            <div class="btn-set">
                <button data-command="reload" class="btn-warning btn-light btn" type="button" title="Reload form">
                    <span class="fa fa-redo-alt"></span>
                </button>
            </div>
            <% if (id) { %>
            <button data-command="copyId" class="btn btn-white" type="button" title="Copy ID">ID</button>
            <% } if (model.hasHistory() ) { %>
            <button data-command="history" class="btn btn-white" type="button" title="Data history"
                    data-url="office/data-history/index?c=<%- p.className %>&id=<%- id %>">
                <span class="fa fa-history"></span>
            </button>
            <% } %>

            <%- include(_view.get('_part/tool/utilities'), {
                params: {
                    meta: model.view.getViewId(),
                    model: id
                }
            }) %>
            <%- include(_view.get('_meta/transition/group')) %>

            <div class="pull-right">
                <% if (id && security.access.canDelete()) { %>
                <button data-command="delete" class="btn btn-white" type="button" title="Delete">
                    <span class="glyphicon glyphicon-trash text-danger"></span>
                </button>
                <% } %>
            </div>

            <div data-command="transiting" class="static-text" style="display: none">
                <span data-t="">Transition in progress...</span>
            </div>
        </div>
    </div>
    <div class="scroll-body box-body">
        <form class="model form-horizontal form" autocomplete="off" enctype="multipart/form-data"
              data-jam="<%- _data.get('jam', 'DocModel') %>"
              data-params="<%= JSON.stringify(p) %>">
            <input name="transition" type="hidden" class="form-value">

            <%- body %>

        </form>
    </div>
    <div class="model-loader overlay">
        <i class="fa fa-spinner fa-spin"></i>
    </div>
</div>