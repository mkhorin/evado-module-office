<!-- _meta/attr/edit/boolean -->
<div class="form-attr form-group row <%- required %> <%- attr.options.css %>"
     data-handler="<%- typeof handler === 'undefined' ? attr.options.handler || 'Checkbox' : handler %>"
     data-action-binder="<%= attr.actionBinder.stringified %>">
    <div class="<%- attr.options.cssLabel || defaultCssLabel %>"></div>
    <div class="<%- attr.options.cssValue || defaultCssValue %>">
        <input name="<%- formAttrName %>" type="hidden" value="<%- model.get(attr) %>" class="form-value">
        <div class="form-check">
            <input class="form-check-input" <%- model.get(attr) ? 'checked' : '' %> type="checkbox">
            <% if (attr.extHint) { %>
            <div class="form-check-label-wrapper">
                <label class="form-check-label"
                       data-t="meta.<%- attr.view.translationKey %>"><%= attr.title %></label><i
                       class="hint-icon" title="<%= attr.extHint %>"
                       data-t="meta.<%- attr.view.translationKey %>"></i>
            </div>
            <% } else { %>
            <label class="form-check-label" data-t="meta.<%- attr.view.translationKey %>"><%= attr.title %></label>
            <% } %>
        </div>
        <div class="error-block"></div>
        <div class="hint-block" data-t="meta.<%- attr.view.translationKey %>"><%- attr.hint %></div>
    </div>
</div>

