<!-- office/./_meta/attr/edit/boolean -->

<div class="<%- attr.options.css %> form-attr form-group <%- required %>"
     data-handler="Checkbox"
     data-action-binder="<%= attr.actionBinder.stringified %>">
    <div class="<%- attr.options.cssValue || 'col-md-10 col-md-offset-2' %>">
        <input name="<%- formAttrName %>" type="hidden" value="<%- model.get(attr) %>" class="form-value">
        <div class="checkbox">
            <label title="<%= attr.extHint %>" data-t-title="meta.<%- attr.translationKey %>">
                <input <%- model.get(attr) ? 'checked' : '' %> type="checkbox">
                <span data-t="meta.<%- attr.translationKey %>"><%- attr.title %></span>
            </label>
        </div>
        <div class="error-block"></div>
        <div class="hint-block" data-t="meta.<%- attr.translationKey %>"><%- attr.hint %></div>
    </div>
</div>

