<!-- _meta/attr/edit/date -->
<%
let value = model.get(attr);
value = value instanceof Date ? value.toISOString() : value;
%>
<div class="form-attr form-group row <%- required %> <%- attr.options.css %>"
     data-handler="<%- typeof handler === 'undefined' ? attr.options.handler || 'Date' : handler %>"
     data-utc="<%- attr.isUTC() %>"
     data-action-binder="<%= attr.actionBinder.stringified %>"
     data-params="<%= JSON.stringify(attr.options) %>">
    <label class="<%- attr.options.cssLabel || defaultCssLabel %> col-form-label">
        <span class="col-form-label-text" title="<%= attr.extHint %>"
              data-t="meta.<%- attr.view.translationKey %>"><%= attr.title %></span>
    </label>
    <div class="<%- attr.options.cssValue || defaultCssValue %>">
        <input name="<%- formAttrName %>" type="hidden" value="<%- value %>" class="form-value">
        <div class="input-group">
            <input type="text" <%- required %> class="datepicker form-control">
            <span class="input-group-text"><i class="far fa-calendar"></i></span>
        </div>
        <div class="error-block"></div>
        <div class="hint-block" data-t="meta.<%- attr.view.translationKey %>"><%= attr.hint %></div>
    </div>
</div>