<!-- _meta/attr/edit/json -->
<div class="form-attr form-group row <%- required %> <%- attr.options.css %>"
     data-handler="<%- typeof handler === 'undefined' ? attr.options.handler || 'Json' : handler %>"
     data-action-binder="<%= attr.actionBinder.stringified %>">
    <label class="<%- attr.options.cssLabel || 'col-md-2' %> col-form-label"
           data-t="meta.<%- attr.view.translationKey %>"
           title="<%= attr.extHint %>"><%- attr.title %></label>
    <div class="<%- attr.options.cssValue || 'col-md-10' %>">
        <div class="input-group">
            <input name="<%- formAttrName %>" type="text" class="form-control form-value" <%- required %>
                   value="<%= model.get(attr) %>">
            <span class="input-group-append">
                <button class="btn-outline-info btn" type="button" title="Editor" data-command="edit">
                    <i class="fas fa-code"></i>
                </button>
            </span>
        </div>
        <div class="error-block"></div>
        <div class="hint-block" data-t="meta.<%- attr.view.translationKey %>"><%- attr.hint %></div>
    </div>
    <div class="json-editor modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" data-t="">JSON editor</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger"></div>
                    <textarea class="json-editor-text form-control" spellcheck="false"></textarea>
                </div>
                <div class="modal-footer">
                    <button class="btn-primary btn" title="Save" data-command="save">
                        <i class="fas fa-download"></i>
                    </button>
                    <button class="btn-outline-secondary btn" data-dismiss="modal" title="Cancel">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>