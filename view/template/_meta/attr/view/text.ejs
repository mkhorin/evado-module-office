<!-- _meta/attr/view/text -->
<%
const attrHandler = typeof handler === 'undefined' ? attr.options.handler : handler;
const value = model.get(attr);
if (!value && attr.isHideEmpty()) {
%>
<div class="form-attr hidden" data-handler="<%- attrHandler %>">
    <input type="hidden" name="<%- formAttrName %>" value="<%= value %>" class="form-value">
</div>
<% } else { %>
<div class="form-attr form-group row <%- required %> <%- attr.options.css %>"
     data-handler="<%- attrHandler %>"
     data-action-binder="<%= attr.actionBinder.stringified %>">
    <label class="<%- attr.options.cssLabel || defaultCssLabel %> col-form-label"
           data-t="meta.<%- attr.view.translationKey %>"
           title="<%= attr.extHint %>"><%- attr.title %></label>
    <div class="<%- attr.options.cssValue || defaultCssValue %>">
        <textarea name="<%- formAttrName %>" rows="<%- attr.options.rows || 3 %>" readonly
                  class="form-control form-value"><%- value %></textarea>
        <div class="error-block"></div>
        <div class="hint-block" data-t="meta.<%- attr.view.translationKey %>"><%- attr.hint %></div>
    </div>
</div>
<% } %>